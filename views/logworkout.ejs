<%- include('partials/header') -%>

<header class="py-10">

    <div class="mx-auto max-w-5xl px-8 sm:px-6 lg:px-12">
        <h1 class="text-3xl font-bold tracking-tight text-white">Log Your Workouts</h1>
    </div>

</header>

</div>




<main class="-mt-32">

    <div class="mx-auto max-w-5xl px-4 pb-12 sm:px-6 lg:px-8">
        <!-- Your content -->
        <div class="rounded-lg bg-white px-5 py-6 shadow sm:px-6">
            <div class="relative rounded border border-dashed border-gray-400 opacity-75">

                <div class=''>



                    <div class="col-sm-6 mx-auto px-3 py-8">
                        <h1 class="text-left pl-5 text-black py-10 font-bold">LOG EXERCISE</h1>
                       
                        <!-- select  -->
                        <form action="/getExcercises" method="post">
                            <label for="cars">Choose a Plan:</label>
                            <select name="savedWorkouts" id="savedWorkouts">
                                <% workouts.forEach(workout => { %>
                                <% if (workout.saved == true) { %>
                                <option name="savedWorkout" value="<%= workout.workoutJSON.workoutName%>">
                                    <%= workout.workoutJSON.workoutName %></option>
                                <%} %>
                                <%}) %>
                            </select>
                            <button type="button" id="populate">populate</button>
                        </form>

                        <table class="workoutTable py-10 rounded-lg bg-white shadow">
                            <tr class="headOfTable">
                                <th>
                                    Date
                                </th>
                                <th>
                                    Exercise Name
                                </th>
                                <th>
                                    Set
                                </th>
                                <th>
                                    Reps
                                </th>
                                <th>
                                    Weight Used
                                </th>
                                <th>
                                    PR ?
                                </th>
                                <th>
                                    Rate <br> (difficulty)
                                </th>
                                <th class="text-red-700">
                                    Remove
                                </th>
                            </tr>
                            <tr class="newRow">
                                <td>
                                    <input id="dateValue" class="workout  ml-1 mr-0.5 rounded-md" type="date">
                                </td>
                                <td>
                                    <input id="exercise" class="workout w-32 mx-0.5 my-1 rounded-md" type="text">
                                </td>
                                <td>
                                    <input class="workout mx-0.5 my-1 text-black w-20 px-2 rounded-md" type="number">
                                </td>
                                <td>
                                    <input class="workout mx-0.5 my-1 text-black w-20 px-2 rounded-md" type="number">
                                </td>
                                <td>
                                    <input class="workout mx-0.5 my-1 w-32 rounded-md" type="number">
                                </td>
                                <td>
                                    <input class="workout rounded-md w-20" type="checkbox" value="true">
                                </td>
                                <td>
                                    <form class="w-36">
                                        <input type="radio" id="1" name="rate" value="1">
                                        <label for="1">1</label>
                                        <input type="radio" id="2" name="rate" value="2">
                                        <label for="2">2</label>
                                        <input type="radio" id="3" name="rate" value="3">
                                        <label for="3">3</label>
                                        <input type="radio" id="4" name="rate" value="4">
                                        <label for="4">4</label>
                                        <input type="radio" id="5" name="rate" value="5">
                                        <label for="5">5</label>
                                      </form>
                                </td>
                                <td>
                                    <input class="workout rounded-md w-20" type="checkbox">
                                </td>
                            </tr>
                        </table>

                        <div class="buttons mx-auto px-10 py-10">
                            <div class="buttons mx-auto w-80">
                                <button class="logWorkout text-black px-2 bg-slate-400 rounded-md">Log
                                    Workout</button>
                                <button value="add_set" onclick="addSet('workoutTable')"
                                    class="addSet text-black px-2 bg-slate-400 rounded-md">Add Set</button>
                                <button value="remove_set" onclick="removeSet('workoutTable')"
                                    class="removeSet text-black px-2 bg-slate-400 rounded-md">Remove Set</button>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
</main>
<script src="main.js"></script>

<%- include('partials/footer') -%>