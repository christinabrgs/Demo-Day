<%- include('partials/header') -%>
<header class="pt-10 pb-6">
  <div class="mx-auto max-w-5xl px-5 sm:px-6 lg:px-16">
    <h1 class="text-3xl font-bold tracking-tight text-[#eda161]">Your Progress</h1>
  </div>
</header>

<div class="mx-auto max-w-5xl px-4 pb-12 sm:px-6 lg:px-8">

  <div class="container text-white">
    <div class="row justify-content-center mt-4">
        <% for(var i=0; i<posts.length; i++) { %>
          <div class="col-6 px-20 py-10 justify-content-between mt-5">
            <div class="p-2"><%= posts[i].title%></div>
            <a href="/post/<%= posts[i]._id%>">
              <img class="rounded-lg img-fluid" src="<%= posts[i].image%>">
            </a>
          </div>
        <% } %>
        
    </div>
  </div>  


</div>
<%- include('partials/picFooter') -%>