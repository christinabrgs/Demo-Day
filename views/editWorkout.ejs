<%- include('partials/header') -%>
<header class="py-10">

    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 flex justify-between">
      <h1 class="text-3xl font-bold tracking-tight text-white">
            <!-- edit form -->
  <form action="/editWorkout/<%= workout._id %>" method="post">
        <input class="p-1 border-2 rounded-md bg-transparent" name="workoutName" value="<%= workout.workoutJSON.workoutName %>" ><span class="text-lg px-2 tracking-wider text-red-500" > - edit workout</span>

     </h1>
      <div class="text-lg text-white focus:text-black;">
        <!-- delete workout -->
        <!-- <form
            action="/result/delete/<%= workout._id %>?_method=DELETE"
            method="POST"
            class="inline-flex px-3"
          > -->
        <!-- <button class="btn btn-primary rounded-md hover:bg-sky-700 fa-regular fa-square-minus" type="submit"></button> 
      </form> -->
       <!-- <%= workout?.saved ? 'Saved' : '' %> -->
      </div>
    </div>
    
  </header>
  
  </div>  
    
  <main class="-mt-32">
      <div class="mx-auto max-w-5xl px-4 pb-12 sm:px-6 lg:px-8">
        <!-- Your content -->
        <div class="rounded-lg bg-white px-5 py-6 shadow sm:px-6">
              <div class="relative  rounded border border-dashed border-gray-400 opacity-75">
  
                <div class="p-4 text-lg font-medium">
                    <textarea class=" p-1 h-20 w-full border-2 rounded-md" name="instructions"> <%= workout.workoutJSON.instructions %> </textarea>
                </div>
                <div class="p-4">
                  <ul role="list" class="divide-y divide-gray-100 max-w-lg mx-auto">
                    <% workout.workoutJSON.exercises.forEach(exercise => { %>
                        <li class="flex gap-x-4 py-5">
                          <div class="flex-auto">
                            <div class="flex items-baseline justify-between gap-x-4">
                              <p class="text-sm font-semibold leading-6 text-gray-900">
                                
                                    <input class="p-1 border-2 rounded-md" name="exerciseName" value="<%= exercise.name %>">
                              </p>
                              <p class="flex-none text-xs text-gray-600">
                                <input class="p-1 text-right border-2 rounded-md" name="exerciseReps" value="<%= exercise.reps %>">
                              </p>
                            </div>
                            <p class="mt-1 text-sm leading-6 text-gray-600">
                                <textarea class="p-1 h-24 w-full border-2 rounded-md" name="exerciseInstructions"> <%= exercise.instructions %> </textarea>
                            </p>
                          </div>
                        </li>
                    <% }) %>
                  </ul>
                  
                </div>
              </div>
            </div>

            <div class="w-full flex flex-reverse p-4">
              <div class="flex-1"></div>
              <div class="px-2">
              </div>
              <div>
                
                  <button type="submit" class="relative inline-flex items-center gap-x-1.5 rounded-md bg-indigo-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">
                    <svg class="-ml-0.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"></path>
                    </svg>
                  Save
                  </button>

                    <!-- button for edit form -->
                </form>

              </div>
            </div>
            
        </div>
    </main>
  </div>

